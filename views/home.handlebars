{{#if loggedIn}}
  <header>
    <h1>Welcome, {{username}}!</h1>
    <a href="/dashboard">Dashboard</a>
    <button id="logout">Log Out</button>
  </header>
{{else}}
  <header>
    <a href="/login">Log In</a>
    <a href="/signup">Sign Up</a>
  </header>
{{/if}}

<main>
  <h1>Blog Posts</h1>

  {{#each blogs}}
    <div>
      <h2>{{this.title}}</h2>
      <p>{{this.content}}</p>
      <p>By {{this.user.username}} on {{this.createdAt}}</p>
    </div>
  {{/each}}
</main>

<script src="/js/logout.js"></script>
